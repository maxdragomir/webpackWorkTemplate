//- Mixin block timer
//- ====================================================================================================================


mixin addTimer(classTimer)
	if classTimer
		- var noClass = `${lotteryName}-${classTimer}`
	else
		- var noClass = ""

	div(class=`${lotteryName}-timer ${noClass}`)
		ul(class=`${lotteryName}-timerList`)
			li
				b 11
				span Дней
			li
				b 22
				span Часов
			li
				b 33
				span Минут
			li
				b 44
				span Секунд