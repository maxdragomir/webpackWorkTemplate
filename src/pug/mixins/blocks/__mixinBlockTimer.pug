//- Mixin block timer
//- ====================================================================================================================


mixin addTimer(classTimer, timerTitle)
	- timerTitle = timerTitle || "до розыгрыша осталось:"
	if classTimer
		- var newClass = `${lotteryName}-${classTimer}`
	else
		- var newClass = ""

	div(class=`${lotteryName}-timer ${newClass}`)&attributes(attributes)
		div(class=`${lotteryName}-timer__title`)
			span= timerTitle
		div(class=`${lotteryName}-timer__wrapper`)
			ul(class=`${lotteryName}-timer__list`)
				li
					b 11
					span Дней
				li
					b 22
					span Часов
				li
					b 33
					span Минут
				li
					b 44
					span Секунд