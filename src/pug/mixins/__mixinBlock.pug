

//- доработать класс блока wrapper
mixin addTicketsScroll(countTicket)
	div(class=`${lotteryName}-wrapper ${lotteryName}-scroll`)
		- for (var i = 0; i <= countTicket; i++)
			div(class=`${lotteryName}-ticket`) 79542362


mixin addBreadcrumbs(nameLottery)
	ul.breadcrumbs
		li
			a(href="#") Home
		li
			a(href="#") Lottery
		li
			= nameLottery


mixin addImg(classImg, urlImg)
	div(class=`${lotteryName}-${classImg}`)
		img(src=urlImg)

mixin addTimer(classTimer)
	div(class=`${lotteryName}-timer ${lotteryName}-${classTimer}`)
		ul(class=`${lotteryName}-timerList`)
			li
				b 11
				span Дней
			li
				b 22
				span Часов
			li
				b 33
				span Минут
			li
				b 44
				span Секунд